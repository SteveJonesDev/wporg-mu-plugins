.wp-block-wporg-site-breadcrumbs {
	position: relative;
	max-width: 100%;
	mask-image: linear-gradient(to right, #000 calc(100% - 60px), transparent);

	& .wporg-site-breadcrumbs__wrapper {
		overflow-x: auto;
		text-overflow: clip;
		white-space: nowrap;

		/* Add extra space so the page title can be fully visible when scrolled. */
		&::after {
			content: "";
			display: inline-block;
			width: 60px;
		}
	}

	& a {
		color: var(--wp--preset--color--charcoal-4);
		text-decoration-line: none;

		&:hover {
			text-decoration-line: underline;
		}
	}

	& span {
		display: inline-block;

		&:not(:last-child) {

			/* This ensures that the square separator is reliably centered. */
			margin-top: 0;

			&::after {
				content: "/";
				display: inline-block;
				font-weight: 400;
				margin: 0 var(--wp--preset--spacing--10);
				color: var(--wp--preset--color--light-grey-1);
			}
		}
	}
}
